# Aliases for everyone!

alias l="ls"
alias la="ls -lisah"
alias please="sudo"
alias py="python3"
alias bashsetup="nano /home/user/.bashrc"
alias sl="ls"
alias ~="cd ~"
alias upd="sudo aptitude update && sudo aptitude upgrade -y && sudo apt autoremove -y"
makex () { touch $1 && nano $1 && sudo chmod +x $1 ; }
md () { mkdir $1 && cd $1 ; }

# Aliases custom made for the linux subsystem for Windows.

win () { cd /mnt/c/$1 ; }
winusers () { cd /mnt/c/Users/$1 ; }
alias cls="clear"
Install-Package () { sudo aptitude install $1 -y ; }
Update-Packages () { sudo aptitude update ; sudo aptitude upgrade -y; sudo apt autoremove -y; echo AutoUpdate done.; }

